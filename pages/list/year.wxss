.list-card {
  position: relative;
  padding: 0.5rem 0.75rem;
  margin-bottom: 0.75rem;
  background: #03a9f4;
  color: #fff;
}

.list-card-title-h1 {
  font-size: 1.2rem;
  padding-top: 0.6rem;
}

.list-card-title-h2 {
	font-size: 1rem;
  padding-top: 0.5rem;
}

.list-card-title-h3 {
	font-size: 0.9rem;
  padding-top: 0.3rem;
}

.list-card-text {
  position: relative;
  font-size: 0.6rem;
}

.list-header-left {
  font-size: 0.7rem;
  text-align: left;
}

.list-header-right {
  font-size: 0.7rem;
  text-align: right;
}

.list-item-title {
  font-size: 1rem;
  color: #000000;
}

.list-item-mark {
  font-size: 0.8rem;
  color: #888888;
}

.view-loading {
  position: relative;
  padding: 0.5rem 0.75rem;
  text-align: center;
}

.image-loading {
  height: 36px;
  width: 36px;
}