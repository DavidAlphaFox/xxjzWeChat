<!--index.wxml-->
<view class="container">
  <view bindtap="bindViewTap" class="userinfo">
    <image class="userinfo-avatar" src="{{userInfo.avatarUrl}}" background-size="cover"></image>
    <text class="userinfo-nickname">{{userInfo.nickName}}</text>
  </view>
  <view class="usermotto">
    <button bindtap="bindViewRefresh" type="default" hidden="{{refresh ? false : true}}">刷新</button>
  </view>
  <view class="userlink">
    <button bindtap="bindViewRegist" type="primary" size="default" disabled="{{lock}}">{{regist}}</button>
  </view>
  <view class="userlink">
    <button bindtap="bindViewLogin" type="default" size="mini" disabled="{{lock}}">{{login}}</button>
  </view>
</view>